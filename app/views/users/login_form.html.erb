<div class="login">
  <%= form_tag("/login") do %>
    <div class="login_form">
      <% if @error_message %>
        <div class="form-error">
          <%= @error_message %>
        </div>
      <% end %>
      <p>email</p>
      <input name="email" value="<%= @email %>">
      <p>password</p>
      <input type="password" name="password" value="<%= @password %>">
      <input type="submit">
    </div>
  <% end %>
</div>
