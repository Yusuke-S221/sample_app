<div class="background">
<div class="new-post-space">
  <h1>EDIT</h1>
  <%= form_tag("/posts/edit/#{@post.id}", {multipart: true}) do %>
    <div class="new-post-form">
      <p>Photo</p>
      <span>
        <% if @error_message %>
        <%= @error_message %>
        <% end %>
      </span>
      <input name="photo" type="file" class="cursor">
      <input name="title" value="<%= @post.title %>" class="title-form" >
      <textarea name="content"><%= @post.content %></textarea>
      <input type="submit" value="submit" class="btn">
    </div>
  <% end %>
</div>
</div>
